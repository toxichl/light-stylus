@import "../../config.styl"

/* 文本溢出显示省略号
   ========================================================================== */
$text-overflow-ellipsis(lineNumber)
  if (lineNumber == 1) {
    overflow hidden
    text-overflo ellipsis
    white-space nowrap
  } else {
    display -webkit-box
    -webkit-box-orient vertical
    -webkit-line-clamp lineNumber
    overflow hidden
  }

.{$css-prefix}-text-ellipsis-1
  $text-overflow-ellipsis(1)

.{$css-prefix}-text-ellipsis-2
  $text-overflow-ellipsis(2)
